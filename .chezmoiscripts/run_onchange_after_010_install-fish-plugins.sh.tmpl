#!/bin/bash
# This script runs when ~/.config/fish/fish_plugins changes.
# The hash below ensures the script only runs when the file's content changes.
# fish_plugins hash: {{ include (joinPath .chezmoi.homeDir ".config" "fish" "fish_plugins") | sha256sum }}
set -eu
echo "Running: " $(basename $0)

# Install plugins based on the fish_plugins file.
if command -v fish &> /dev/null && fish -c "functions -q fisher"; then
    echo "Updating Fisher plugins..."
    fish -c "fisher update"
fi
